{
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "version": "0.6.2",
  "command": {
    "version": {
      "conventionalCommits": true
    },
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish %v",
      "registry": "https://registry.npmjs.org/"
    }
  }
}
